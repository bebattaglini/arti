  <div class="product-card">
    <% if product.images.any? %>
      <%= image_tag product.images[0].data %>
    <% else %>
      <%= image_tag "noimage.jpg" %>
    <% end %>
    <div class="product-card-infos">
      <% if current_artist == product.artist %>
        <%= link_to artist_product_path(product) do %>
          <p style=" font-size: 16px; ">title</p>
        <% end %>
        <% if product.available? %>
          <p style=" font-size: 16px; ">available</p>
        <% else %>
          <p style=" font-size: 16px; ">sold</p>
        <% end %>
      <% else %>
        <%= link_to product_path(product) do %>
            <p style=" font-size: 16px; ">title</p>
        <% end %>
      <% end %>
      <p style=" font-size: 16px; font-weight: bold; ">200$</p>
    </div>
  </div>
