<div class="navbar navbar-expand-sm navbar-light navbar-arti">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "dashboard", dashboard_path, class: "main-link", style: "margin-right: 30px;" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar? %>
            <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
          <% else %>
            <%= image_tag "face.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
          <% end %>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <p class="main-button dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">log in</p>
          <div class="dropdown-menu dropdown-menu-right menu-login" aria-labelledby="navbarDropdown">
            <%= link_to "register", new_user_session_path, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
