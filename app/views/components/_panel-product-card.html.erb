<% myproducts.each do |product| %>
  <div class="product-card">
    <% if product.images.any? %>
      <%= image_tag product.images.data %>
    <% else %>
      <%= image_tag "noimage.jpg" %>
    <% end %>
    <div class="product-card-infos">
        <p style=" font-size: 16px; "><%= product.title %></p>
        <p style=" font-size: 16px; font-weight: bold; "><%= product.price %>$</p>
    </div>
  </div>
<% end %>

